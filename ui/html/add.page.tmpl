{{template "base" .}}
{{define "title"}}Create a Game{{end}}
{{define "main"}}
{{ if .Games}}
<label for="game">Select a game:</label>
<select name="game" id="game">
    {{range .Games}}
    <option value="{{.ID}}">{{.Name}}</option>
    {{end}}
</select>
{{ else }}
There are no available games to add.
{{ end }}
{{ end }}